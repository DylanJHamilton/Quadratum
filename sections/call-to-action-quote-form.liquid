/* radios/checkboxes are inline-size and aligned next to text */
.q-cta-quote-form .q-radio{ display:flex; align-items:center; gap:10px; justify-content:flex-start; width:max-content; }
.q-cta-quote-form .q-check{ width:auto; height:1.05rem; margin:0; padding:0; }

/* invalid state – only for text/select/textarea; not for checkboxes/radios */
.q-cta-quote-form input:not([type="checkbox"]):not([type="radio"])[aria-invalid="true"],
.q-cta-quote-form select[aria-invalid="true"],
.q-cta-quote-form textarea[aria-invalid="true"]{
  border-color: var(--q-error, #dc2626);
  outline:1px solid var(--q-error, #dc2626);
}

/* invalid state for checkboxes/radios: outline the box, not the whole row */
.q-cta-quote-form .q-check[aria-invalid="true"]{
  outline:2px solid var(--q-error, #dc2626);
  outline-offset:2px;
}

