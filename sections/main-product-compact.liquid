{%- liquid
  assign p = product
  if p == blank
    break
  endif
-%}

<section
  class="main-product-compact color-{{ section.settings.color_scheme }}"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="page-width">

    <div class="main-product-compact__inner">
      
      <!-- Media Column -->
      <div class="main-product-compact__media">
        {{ p.featured_media | image_url: width: 1200 | image_tag }}
      </div>

      <!-- Details Column -->
      <div class="main-product-compact__details">
        <h1>{{ p.title }}</h1>
        <div class="price">
          {{ p.price | money }}
        </div>
      </div>

    </div>

  </div>
</section>

<style>
.main-product-compact__inner {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: {{ section.settings.gap }}px;
}

@media (max-width: 989px) {
  .main-product-compact__inner {
    grid-template-columns: 1fr;
  }
}
</style>

{% schema %}
{
  "name": "Main Product - Compact",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Column gap",
      "min": 0,
      "max": 80,
      "step": 4,
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Main Product - Compact",
      "category": "Products"
    }
  ]
}
{% endschema %}
