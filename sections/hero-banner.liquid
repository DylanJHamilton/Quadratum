{% comment %}
  Quadratum • Hero Banner (Classic)
  Spacing/centering fallbacks added; no inline “#” comments inside {% liquid %}.
{% endcomment %}

{% liquid
  assign s = section.settings

  assign ai_m = 'center'
  assign jc_m = 'center'
  case s.content_position_mobile
    when 'start_start'  assign ai_m = 'flex-start' assign jc_m = 'flex-start'
    when 'start_center' assign ai_m = 'flex-start' assign jc_m = 'center'
    when 'start_end'    assign ai_m = 'flex-start' assign jc_m = 'flex-end'
    when 'center_start' assign ai_m = 'center'     assign jc_m = 'flex-start'
    when 'center_center'assign ai_m = 'center'     assign jc_m = 'center'
    when 'center_end'   assign ai_m = 'center'     assign jc_m = 'flex-end'
    when 'end_start'    assign ai_m = 'flex-end'   assign jc_m = 'flex-start'
    when 'end_center'   assign ai_m = 'flex-end'   assign jc_m = 'center'
    when 'end_end'      assign ai_m = 'flex-end'   assign jc_m = 'flex-end'
  endcase

  assign ai_d = 'center'
  assign jc_d = 'center'
  case s.content_position
    when 'start_start'  assign ai_d = 'flex-start' assign jc_d = 'flex-start'
    when 'start_center' assign ai_d = 'flex-start' assign jc_d = 'center'
    when 'start_end'    assign ai_d = 'flex-start' assign jc_d = 'flex-end'
    when 'center_start' assign ai_d = 'center'     assign jc_d = 'flex-start'
    when 'center_center'assign ai_d = 'center'     assign jc_d = 'center'
    when 'center_end'   assign ai_d = 'center'     assign jc_d = 'flex-end'
    when 'end_start'    assign ai_d = 'flex-end'   assign jc_d = 'flex-start'
    when 'end_center'   assign ai_d = 'flex-end'   assign jc_d = 'center'
    when 'end_end'      assign ai_d = 'flex-end'   assign jc_d = 'flex-end'
  endcase

  assign txt_align = 'center'
  case s.text_alignment
    when 'left'  assign txt_align = 'left'
    when 'right' assign txt_align = 'right'
  endcase

  assign cta_justify_css = 'center'
  case s.cta_group_align
    when 'left'  assign cta_justify_css = 'flex-start'
    when 'right' assign cta_justify_css = 'flex-end'
  endcase

  assign min_h_val = '75vh'
  case s.min_height
    when 'min-h-[50vh]' then assign min_h_val = '50vh'
    when 'min-h-[60vh]' then assign min_h_val = '60vh'
    when 'min-h-[75vh]' then assign min_h_val = '75vh'
    when 'min-h-screen' then assign min_h_val = '100vh'
  endcase

  assign pad_l_m = 0
  assign pad_r_m = 0
  assign pad_l_d = 0
  assign pad_r_d = 0
  if s.container_mode == 'contained'
    assign pad_l_m = 16
    assign pad_r_m = 16
    assign pad_l_d = 24
    assign pad_r_d = 24
  endif

  assign max_w_css = '56rem'
  case s.content_max_w
    when 'max-w-2xl' then assign max_w_css = '42rem'
    when 'max-w-3xl' then assign max_w_css = '48rem'
    when 'max-w-4xl' then assign max_w_css = '56rem'
  endcase

  assign accent_fs = '1.125rem'
  case s.accent_size
    when 'sm'   then assign accent_fs = '0.875rem'
    when 'base' then assign accent_fs = '1rem'
    when 'lg'   then assign accent_fs = '1.125rem'
    when 'xl'   then assign accent_fs = '1.25rem'
  endcase

  assign heading_fs = '3rem'
  case s.heading_size
    when '3xl' then assign heading_fs = '1.875rem'
    when '4xl' then assign heading_fs = '2.25rem'
    when '5xl' then assign heading_fs = '3rem'
    when '6xl' then assign heading_fs = '3.75rem'
  endcase

  assign sub_fs = '1.125rem'
  case s.subheading_size
    when 'base' then assign sub_fs = '1rem'
    when 'lg'   then assign sub_fs = '1.125rem'
    when 'xl'   then assign sub_fs = '1.25rem'
  endcase

  assign has_cta1 = false
  if s.cta_text != blank and s.cta_link != blank
    assign has_cta1 = true
  endif
  assign has_cta2 = false
  if s.cta2_text != blank and s.cta2_link != blank
    assign has_cta2 = true
  endif

  assign btn_mode_class = 'q-btn--solid'
  if s.button_mode == 'outline'
    assign btn_mode_class = 'q-btn--outline'
  endif

  assign visibility_classes = ''
  if s.hide_on_mobile
    assign visibility_classes = visibility_classes | append: ' hidden md:block'
  endif
  if s.hide_on_desktop
    assign visibility_classes = visibility_classes | append: ' md:hidden'
  endif
%}

<section id="{{ s.anchor_id | default: 'section-' | append: section.id }}"
         class="q-hero-classic banner-section relative overflow-hidden {{ s.min_height | default: 'min-h-[75vh]' }}{{ visibility_classes }}"
         style="min-height: {{ min_h_val }};">
  {% if s.background_video != blank %}
    <video class="absolute inset-0 w-full h-full object-cover z-0"
           autoplay loop muted playsinline preload="none"
           {% if s.background_image != blank %}poster="{{ s.background_image | image_url: width: 1600 }}"{% endif %}>
      <source src="{{ s.background_video }}" type="video/mp4">
    </video>
  {% elsif s.background_image != blank %}
    {{ s.background_image
      | image_url: width: 2880
      | image_tag:
        widths: '960,1440,1920,2560,2880',
        sizes: '100vw',
        loading: 'eager',
        fetchpriority: 'high',
        class: 'absolute inset-0 w-full h-full object-cover z-0',
        alt: '' }}
  {% endif %}

  <div class="absolute inset-0 z-0" aria-hidden="true"
       style="background-color: {{ s.overlay_color }}; opacity: {{ s.overlay_opacity | divided_by: 100.0 }};"></div>

  <div class="relative z-10 w-full h-full q-flexor flex">
    <div class="q-wrap w-full {{ s.content_max_w }}"
         style="
           max-width: {{ max_w_css }};
           margin-top: {{ s.margin_top }}px; margin-bottom: {{ s.margin_bottom }}px;
           padding-top: {{ s.padding_top }}px; padding-bottom: {{ s.padding_bottom }}px;
           text-align: {{ txt_align }};
         ">

      {% if s.accent_heading != blank %}
        <p class="q-accent uppercase tracking-wide font-semibold"
           style="margin-bottom:8px; font-size: {{ accent_fs }}; line-height:1.2; color: {{ s.accent_color }};">
          {{ s.accent_heading }}
        </p>
      {% endif %}

      {% if s.heading != blank %}
        {% case s.heading_level | default: 'h1' %}
          {% when 'h2' %}
            <h2 class="q-heading font-bold"
                style="margin-bottom:16px; font-size: {{ heading_fs }}; line-height:1.12; color: {{ s.heading_color }};">
              {{ s.heading }}
            </h2>
          {% else %}
            <h1 class="q-heading font-bold"
                style="margin-bottom:16px; font-size: {{ heading_fs }}; line-height:1.12; color: {{ s.heading_color }};">
              {{ s.heading }}
            </h1>
        {% endcase %}
      {% endif %}

      {% if s.subheading != blank %}
        <p class="q-sub"
           style="margin-bottom:24px; font-size: {{ sub_fs }}; line-height:1.5; color: {{ s.subheading_color }};">
          {{ s.subheading }}
        </p>
      {% endif %}

      {% if has_cta1 or has_cta2 %}
        <div class="q-cta-row flex flex-wrap gap-3" style="justify-content: {{ cta_justify_css }};">
          {% if has_cta1 %}
            <a href="{{ s.cta_link }}"
               aria-label="{{ s.cta_aria_label | escape }}"
               class="q-btn {{ btn_mode_class }}"
               style="
                 --q-btn-bg: {{ s.button_bg_color }};
                 --q-btn-text: {{ s.button_text_color }};
                 --q-btn-border: {{ s.button_border_color }};
                 --q-btn-bw: {{ s.button_border_width }}px;
                 --q-btn-br: {{ s.button_radius }}px;
                 --q-btn-px: {{ s.button_padding_horizontal }}px;
                 --q-btn-py: {{ s.button_padding_vertical }}px;">
              {{ s.cta_text }}
            </a>
          {% endif %}

          {% if has_cta2 %}
            <a href="{{ s.cta2_link }}"
               aria-label="{{ s.cta2_aria_label | escape }}"
               class="q-btn {{ btn_mode_class }}"
               style="
                 --q-btn-bg: {{ s.button_bg_color }};
                 --q-btn-text: {{ s.button_text_color }};
                 --q-btn-border: {{ s.button_border_color }};
                 --q-btn-bw: {{ s.button_border_width }}px;
                 --q-btn-br: {{ s.button_radius }}px;
                 --q-btn-px: {{ s.button_padding_horizontal }}px;
                 --q-btn-py: {{ s.button_padding_vertical }}px;">
              {{ s.cta2_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .q-hero-classic .q-btn{
    display:inline-block; font-weight:600;
    transition:transform .15s ease, box-shadow .15s ease, background-color .2s ease, color .2s ease, border-color .2s ease;
    border-radius:var(--q-btn-br,6px);
    padding:var(--q-btn-py,12px) var(--q-btn-px,24px);
    color:var(--q-btn-text,#000); text-decoration:none;
    box-shadow:0 1px 2px rgb(0 0 0 / 0.08);
  }
  .q-hero-classic .q-btn--solid{ background:var(--q-btn-bg,#fff); border:none; }
  .q-hero-classic .q-btn--outline{ background:transparent; border-style:solid; border-color:var(--q-btn-border,#111); border-width:var(--q-btn-bw,1px); }
  .q-hero-classic .q-btn:focus-visible{ outline:2px solid rgba(0,0,0,.45); outline-offset:2px; }
  .q-hero-classic .q-btn:hover{ transform:translateY(-1px); box-shadow:0 4px 14px rgb(0 0 0 / 0.12); }
  .q-hero-classic .q-btn:active{ transform:translateY(0); box-shadow:0 2px 8px rgb(0 0 0 / 0.12); }

  /* Container side padding fallback */
  #{{ s.anchor_id | default: 'section-' | append: section.id }} .q-wrap{
    padding-left: {{ pad_l_m }}px; padding-right: {{ pad_r_m }}px;
  }
  @media (min-width:768px){
    #{{ s.anchor_id | default: 'section-' | append: section.id }} .q-wrap{
      padding-left: {{ pad_l_d }}px; padding-right: {{ pad_r_d }}px;
    }
  }

  /* Flex alignment fallbacks */
  #{{ s.anchor_id | default: 'section-' | append: section.id }} .q-flexor{
    align-items: {{ ai_m }}; justify-content: {{ jc_m }};
  }
  @media (min-width:768px){
    #{{ s.anchor_id | default: 'section-' | append: section.id }} .q-flexor{
      align-items: {{ ai_d }}; justify-content: {{ jc_d }};
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner • Classic",
  "tag": "section",
  "class": "q-hero-classic",
  "settings": [
    { "type": "header", "content": "About this section" },
    { "type": "paragraph", "content": "Full-bleed hero with image/video background, overlay, heading, subheading, and up to 2 CTAs. Built-in spacing & alignment fallbacks." },

    { "type": "header", "content": "Background media" },
    { "type": "image_picker", "id": "background_image", "label": "Background image" },
    { "type": "text", "id": "background_video", "label": "Background video URL (MP4)", "info": "If set, video is used with preload=\"none\". Image (if provided) is used as poster/fallback." },

    { "type": "color", "id": "overlay_color", "label": "Overlay color", "default": "#000000" },
    { "type": "range", "id": "overlay_opacity", "label": "Overlay opacity", "min": 0, "max": 100, "step": 5, "default": 40, "unit": "%" },

    { "type": "header", "content": "Layout & spacing" },
    { "type": "select", "id": "min_height", "label": "Minimum height", "default": "min-h-[75vh]", "options": [
      { "value": "min-h-[50vh]", "label": "50% viewport" },
      { "value": "min-h-[60vh]", "label": "60% viewport" },
      { "value": "min-h-[75vh]", "label": "75% viewport" },
      { "value": "min-h-screen", "label": "Full screen" }
    ]},
    { "type": "select", "id": "container_mode", "label": "Container", "default": "contained", "options": [
      { "value": "contained", "label": "Contained (side padding)" },
      { "value": "full", "label": "Full-bleed (edge to edge)" }
    ]},
    { "type": "select", "id": "content_max_w", "label": "Content width", "default": "max-w-4xl", "options": [
      { "value": "max-w-2xl", "label": "Narrow" },
      { "value": "max-w-3xl", "label": "Comfort" },
      { "value": "max-w-4xl", "label": "Wide" }
    ]},
    { "type": "range", "id": "padding_top", "label": "Padding top", "min": 0, "max": 200, "step": 10, "default": 60 },
    { "type": "range", "id": "padding_bottom", "label": "Padding bottom", "min": 0, "max": 200, "step": 10, "default": 60 },
    { "type": "range", "id": "margin_top", "label": "Margin top", "min": 0, "max": 100, "step": 10, "default": 0 },
    { "type": "range", "id": "margin_bottom", "label": "Margin bottom", "min": 0, "max": 100, "step": 10, "default": 0 },

    { "type": "header", "content": "Content" },
    { "type": "text", "id": "accent_heading", "label": "Accent heading (kicker)", "default": "Featured collection" },
    { "type": "color", "id": "accent_color", "label": "Accent color", "default": "#ffffff" },
    { "type": "select", "id": "accent_size", "label": "Accent size", "options": [
      { "value": "sm", "label": "Small" },
      { "value": "base", "label": "Normal" },
      { "value": "lg", "label": "Large" },
      { "value": "xl", "label": "XL" }
    ], "default": "lg" },

    { "type": "text", "id": "heading", "label": "Heading", "default": "Welcome to our store" },
    { "type": "select", "id": "heading_level", "label": "Heading level", "default": "h1", "options": [
      { "value": "h1", "label": "H1 (page headline)" },
      { "value": "h2", "label": "H2 (sub-headline)" }
    ]},
    { "type": "color", "id": "heading_color", "label": "Heading color", "default": "#ffffff" },
    { "type": "select", "id": "heading_size", "label": "Heading size", "options": [
