{% comment %} sections/dev-tokens.liquid {% endcomment %}
<section id="{{ section.id }}" class="section-pad" style="background:var(--c-surface); color:var(--c-text);">
  <div class="container">
    <h2 class="h2" style="margin-bottom:var(--space-md)">Design Tokens Inspector</h2>

    <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(180px,1fr));gap:var(--space-md);margin-bottom:var(--space-lg)">
      {% assign color_tokens = "c-primary|Primary,c-secondary|Secondary,c-accent|Accent,c-success|Success,c-warning|Warning,c-danger|Danger,c-bg|BG,c-surface|Surface,c-text|Text,c-muted|Muted,c-oncolor|On Color" | split: "," %}
      {% for pair in color_tokens %}
        {% assign p = pair | split: "|" %}
        {% assign var = p[0] %}
        {% assign label = p[1] %}
        <div style="border:1px solid rgba(0,0,0,.06);border-radius:8px;overflow:hidden">
          <div style="height:56px;background:var(--{{ var }});"></div>
          <div style="padding:10px;font:400 12px/1 var(--font-body);">
            <div style="font-weight:600">{{ label }}</div>
            <code style="font-size:11px">--{{ var }}</code>
          </div>
        </div>
      {% endfor %}
    </div>

    <div style="display:grid;gap:6px;margin-bottom:var(--space-lg)">
      <div class="h1">Heading 1 — The quick brown fox</div>
      <div class="h2">Heading 2 — The quick brown fox</div>
      <div class="h3">Heading 3 — The quick brown fox</div>
      <div class="h4">Heading 4 — The quick brown fox</div>
      <div class="h5">Heading 5 — The quick brown fox</div>
      <div class="h6">Heading 6 — The quick brown fox</div>
      <p style="font:400 var(--fs-body)/var(--lh-body) var(--font-body);margin-top:var(--space-sm)">
        Body — The quick brown fox jumps over the lazy dog ({{ settings.font_body.family }}).
      </p>
    </div>

    <div style="display:flex;flex-wrap:wrap;gap:12px;margin-bottom:var(--space-lg)">
      <a class="btn btn--solid btn--sm">Solid / sm</a>
      <a class="btn btn--solid btn--md">Solid / md</a>
      <a class="btn btn--solid btn--lg">Solid / lg</a>

      <a class="btn btn--outline btn--sm">Outline / sm</a>
      <a class="btn btn--outline btn--md">Outline / md</a>
      <a class="btn btn--outline btn--lg">Outline / lg</a>

      <a class="btn btn--ghost btn--sm">Ghost / sm</a>
      <a class="btn btn--ghost btn--md">Ghost / md</a>
      <a class="btn btn--ghost btn--lg">Ghost / lg</a>
    </div>

    <p style="opacity:.7;font-size:12px">Tip: toggle dark mode with <code>setTheme('dark')</code> / <code>setTheme('light')</code> in DevTools.</p>
  </div>
</section>

{% schema %}
{
  "name": "Dev • Tokens Inspector",
  "settings": [],
  "blocks": [],
  "presets": [{ "name": "Dev • Tokens Inspector" }]
}
{% endschema %}
