{%- comment -%}
  Quadratum — Basic Content Helper · Column Builder (Tiles Row)
  File: sections/basic-content-helper-column-builder.liquid

  Purpose:
  - A designer-friendly “tiles/columns” builder (1–6 columns desktop)
  - Ideal for: features, services, steps, value props
  - Blocks are flat (Shopify does not support nested blocks)

  Guarantees:
  - No JS
  - No grid auto-fit/auto-fill
  - No horizontal overflow (min-width:0 + safe grid)
  - Premium defaults; token-driven via CSS vars
  - Buttons have full designer controls (radius/colors/hover/lift/transition)

  Notes:
  - Icons are loaded from assets/icons/*.svg (img tag). If missing, icon stays empty.
{%- endcomment -%}

{%- liquid
  assign s = section.settings
  assign tiles = section.blocks | where: 'type', 'tile'
  assign count = tiles.size

  if count == 0
    break
  endif

  assign cols_d = s.columns_desktop | default: 3
  assign cols_t = s.columns_tablet | default: 2
  assign cols_m = s.columns_mobile | default: 1

  assign cols_d_m1 = cols_d | minus: 1
  assign cols_t_m1 = cols_t | minus: 1
  assign cols_m_m1 = cols_m | minus: 1

  assign has_header = false
  if s.title != blank or s.subtitle != blank
    assign has_header = true
  endif

  assign layout_style = s.layout_style | default: 'card'
  assign media_ratio = s.media_ratio | default: 'ratio_16_9'
-%}

<section
  class="q-column-builder q-scope-{{ section.id }} q-style-{{ layout_style }}"
  style="
    --q-max-width: {{ s.max_width | default: 1200 }}px;

    --q-pad-y: {{ s.pad_y | default: 'var(--q-space-10)' }};
    --q-pad-x: {{ s.pad_x | default: 'var(--q-space-6)' }};

    --q-gap: {{ s.gap | default: 'var(--q-space-8)' }};
    --q-tile-pad: {{ s.tile_pad | default: 'var(--q-space-8)' }};
    --q-tile-inner-gap: {{ s.tile_inner_gap | default: 'var(--q-space-5)' }};

    --q-cols-desktop: {{ cols_d }};
    --q-cols-tablet: {{ cols_t }};
    --q-cols-mobile: {{ cols_m }};

    --q-cols-desktop-m1: {{ cols_d_m1 }};
    --q-cols-tablet-m1: {{ cols_t_m1 }};
    --q-cols-mobile-m1: {{ cols_m_m1 }};

    --q-align: {{ s.text_align | default: 'left' }};

    --q-surface: {{ s.surface | default: 'transparent' }};

    --q-tile-surface: {{ s.tile_surface | default: 'var(--q-surface-2)' }};
    --q-tile-border-color: {{ s.tile_border_color | default: 'var(--q-border)' }};
    --q-tile-border-width: {{ s.tile_border_width | default: 'var(--q-border-width)' }};
    --q-tile-radius: {{ s.tile_radius | default: 'var(--q-radius-lg)' }};
    --q-tile-shadow: {{ s.tile_shadow | default: 'var(--q-shadow-1)' }};

    --q-title-color: {{ s.title_color | default: 'var(--q-text)' }};
    --q-body-color: {{ s.body_color | default: 'var(--q-muted)' }};

    --q-icon-size: {{ s.icon_size | default: 'var(--q-font-size-xl)' }};
    --q-icon-color: {{ s.icon_color | default: 'var(--q-accent)' }};

    --q-media-radius: {{ s.media_radius | default: 'var(--q-radius-md)' }};
    --q-media-max-h: {{ s.media_max_h | default: '360px' }};
    --q-media-fit: {{ s.media_fit | default: 'cover' }};

    --q-link-color: {{ s.link_color | default: 'var(--q-accent)' }};

    --q-btn-bg: {{ s.btn_bg | default: 'var(--q-accent)' }};
    --q-btn-fg: {{ s.btn_fg | default: 'var(--q-on-accent)' }};
    --q-btn-border: {{ s.btn_border | default: 'var(--q-accent)' }};
    --q-btn-radius: {{ s.btn_radius | default: 'var(--q-radius-md)' }};
    --q-btn-pad-y: {{ s.btn_pad_y | default: 'var(--q-space-3)' }};
    --q-btn-pad-x: {{ s.btn_pad_x | default: 'var(--q-space-5)' }};

    /* NEW: Button hover + motion controls */
    --q-btn-hover-bg: {{ s.btn_hover_bg | default: 'rgba(0,0,0,0.06)' }};
    --q-btn-hover-fg: {{ s.btn_hover_fg | default: 'var(--q-btn-fg)' }};
    --q-btn-hover-border: {{ s.btn_hover_border | default: 'var(--q-btn-border)' }};
    --q-btn-hover-lift: {{ s.btn_hover_lift | default: '2px' }};
    --q-btn-transition: {{ s.btn_transition | default: '160ms' }};
    --q-btn-hover-shadow: {{ s.btn_hover_shadow | default: 'var(--q-shadow-2)' }};

    {%- if s.use_custom_colors -%}
      --q-surface: {{ s.custom_bg }};
      --q-text: {{ s.custom_text }};
      --q-muted: {{ s.custom_muted }};
      --q-accent: {{ s.custom_accent }};
      --q-title-color: {{ s.custom_text }};
      --q-body-color: {{ s.custom_muted }};
      --q-link-color: {{ s.custom_accent }};
      --q-icon-color: {{ s.custom_accent }};
      --q-btn-bg: {{ s.custom_accent }};
      --q-btn-border: {{ s.custom_accent }};
      /* keep hover vars as configured */
    {%- endif -%}
  "
  {% if s.anchor_id != blank %}id="{{ s.anchor_id | escape }}"{% endif %}
  aria-label="{{ s.aria_label | default: s.title | default: 'Column builder' | escape }}"
>
  <style>
  /* =========================================================
  Quadratum — Basic Content Helper · Column Builder (Tiles Row)
  Scope: .q-scope-{{ section.id }}
  Layout: CSS Grid (reliable “N columns per row”)
========================================================= */

.q-scope-{{ section.id }}{
  background: var(--q-surface, transparent);
  color: var(--q-text, inherit);
  padding-block: var(--q-pad-y, 48px);
}

/* wrapper */
.q-scope-{{ section.id }} .q-wrap{
  max-width: var(--q-max-width, 1200px);
  margin-inline: auto;
  width: 100%;
  padding-inline: var(--q-pad-x, 24px);
  box-sizing: border-box;
}

/* header */
.q-scope-{{ section.id }} .q-header{
  text-align: var(--q-align, left);
  display: grid;
  gap: var(--q-space-3, 12px);
  margin-bottom: var(--q-gap, 24px);
}

.q-scope-{{ section.id }} .q-header .q-subtitle{
  color: var(--q-muted, inherit);
}

/* =========================================================
  TRUE COLUMN BUILDER: GRID (no auto-fit/auto-fill)
========================================================= */

.q-scope-{{ section.id }} .q-tiles{
  display: grid;
  gap: var(--q-gap, 24px);
  grid-template-columns: repeat(var(--q-cols-mobile, 1), minmax(0, 1fr));
  list-style: none;
  padding: 0;
  margin: 0;
  align-items: stretch;
}

/* tablet */
@media (min-width: 750px){
  .q-scope-{{ section.id }} .q-tiles{
    grid-template-columns: repeat(var(--q-cols-tablet, 2), minmax(0, 1fr));
  }
}

/* desktop */
@media (min-width: 990px){
  .q-scope-{{ section.id }} .q-tiles{
    grid-template-columns: repeat(var(--q-cols-desktop, 3), minmax(0, 1fr));
  }
}

/* tiles */
.q-scope-{{ section.id }} .q-tile{
  min-width: 0;
}

.q-scope-{{ section.id }} .q-tile-inner{
  width: 100%;
  min-width: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
  gap: var(--q-tile-inner-gap, 12px);
}

/* shells */
.q-scope-{{ section.id }}.q-style-card .q-tile-inner{
  background: var(--q-tile-surface, var(--q-surface-2, #fff));
  border: var(--q-tile-border-width, 1px) solid var(--q-tile-border-color, rgba(0,0,0,.12));
  border-radius: var(--q-tile-radius, 16px);
  box-shadow: var(--q-tile-shadow, 0 8px 24px rgba(0,0,0,.08));
  padding: var(--q-tile-pad, 18px);
}

.q-scope-{{ section.id }}.q-style-soft .q-tile-inner{
  background: var(--q-tile-surface, var(--q-surface-2, #fff));
  border: 0;
  border-radius: var(--q-tile-radius, 16px);
  box-shadow: var(--q-tile-shadow, 0 8px 24px rgba(0,0,0,.08));
  padding: var(--q-tile-pad, 18px);
}

.q-scope-{{ section.id }}.q-style-bare .q-tile-inner{
  background: transparent;
  border: 0;
  border-radius: 0;
  box-shadow: none;
  padding: 0;
}

/* icon (assets/icons/*.svg) */
.q-scope-{{ section.id }} .q-icon{
  line-height: 0;
  display: inline-flex;
  align-self: flex-start;
  color: var(--q-icon-color, currentColor);
}

.q-scope-{{ section.id }} .q-icon img{
  width: var(--q-icon-size, 24px);
  height: var(--q-icon-size, 24px);
  display: block;
}

/* media */
.q-scope-{{ section.id }} .q-media{
  margin: 0;
  border-radius: var(--q-media-radius, 12px);
  overflow: hidden;
  width: 100%;
  max-height: var(--q-media-max-h, 360px);
}

.q-scope-{{ section.id }} .q-media.q-ratio-16-9{ aspect-ratio: 16 / 9; }
.q-scope-{{ section.id }} .q-media.q-ratio-4-3{ aspect-ratio: 4 / 3; }
.q-scope-{{ section.id }} .q-media.q-ratio-1-1{ aspect-ratio: 1 / 1; }
.q-scope-{{ section.id }} .q-media.q-ratio-natural{ aspect-ratio: auto; }

.q-scope-{{ section.id }} .q-media img{
  width: 100%;
  height: 100%;
  display: block;
  object-fit: var(--q-media-fit, cover);
}

/* type */
.q-scope-{{ section.id }} .q-title{
  margin: 0;
  color: var(--q-tile-title-color, var(--q-title-color, inherit));
  font-size: var(--q-tile-title-size, 18px);
}

.q-scope-{{ section.id }} .q-body{
  color: var(--q-tile-body-color, var(--q-body-color, inherit));
  font-size: var(--q-tile-body-size, 16px);
}

/* CTA */
.q-scope-{{ section.id }} .q-cta{
  margin-top: auto;
}

.q-scope-{{ section.id }} .q-cta-link{
  display: inline-flex;
  align-items: center;
  gap: 8px;
  color: var(--q-link-color, currentColor);
  text-decoration: underline;
  text-underline-offset: .2em;
}

@media (hover:hover) and (pointer:fine){
  .q-scope-{{ section.id }} .q-cta-link:hover{
    text-decoration-thickness: 2px;
  }
}

/* =========================================================
  NEW: Button system (no JS)
  - Radius/colors already controlled by vars
  - Adds hover + lift + transition + focus ring
========================================================= */

.q-scope-{{ section.id }} .q-cta-btn{
  -webkit-tap-highlight-color: transparent;
  position: relative;
  user-select: none;

  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;

  padding: var(--q-btn-pad-y, 10px) var(--q-btn-pad-x, 16px);
  border-radius: var(--q-btn-radius, 12px);
  border: 1px solid var(--q-btn-border, currentColor);

  text-decoration: none;
  font: inherit;
  cursor: pointer;
  width: fit-content;

  transition:
    transform var(--q-btn-transition, 160ms) ease,
    box-shadow var(--q-btn-transition, 160ms) ease,
    background-color var(--q-btn-transition, 160ms) ease,
    border-color var(--q-btn-transition, 160ms) ease,
    color var(--q-btn-transition, 160ms) ease;
}

/* solid vs outline */
.q-scope-{{ section.id }} .q-btn-solid{
  background: var(--q-btn-bg, currentColor);
  color: var(--q-btn-fg, #fff);
  border-color: var(--q-btn-border, var(--q-btn-bg, currentColor));
}

.q-scope-{{ section.id }} .q-btn-outline{
  background: transparent;
  color: var(--q-btn-bg, currentColor);
  border-color: var(--q-btn-border, currentColor);
}

/* hover behavior */
@media (hover:hover) and (pointer:fine){
  .q-scope-{{ section.id }} .q-cta-btn:hover{
    transform: translateY(calc(var(--q-btn-hover-lift, 2px) * -1));
    box-shadow: var(--q-btn-hover-shadow, var(--q-shadow-2, 0 10px 24px rgba(0,0,0,.10)));
  }

  .q-scope-{{ section.id }} .q-btn-solid:hover{
    background: var(--q-btn-hover-bg, rgba(0,0,0,0.06));
    color: var(--q-btn-hover-fg, var(--q-btn-fg, #fff));
    border-color: var(--q-btn-hover-border, var(--q-btn-border, currentColor));
  }

  .q-scope-{{ section.id }} .q-btn-outline:hover{
    background: var(--q-btn-hover-bg, rgba(0,0,0,0.06));
    color: var(--q-btn-hover-fg, var(--q-btn-bg, currentColor));
    border-color: var(--q-btn-hover-border, var(--q-btn-border, currentColor));
  }
}

/* active press */
.q-scope-{{ section.id }} .q-cta-btn:active{
  transform: translateY(0);
  box-shadow: var(--q-shadow-1, 0 6px 16px rgba(0,0,0,.08));
}

/* focus ring */
.q-scope-{{ section.id }} .q-cta-btn:focus-visible,
.q-scope-{{ section.id }} a:focus-visible{
  outline: 2px solid var(--q-link-color, currentColor);
  outline-offset: 3px;
  border-radius: var(--q-btn-radius, 8px);
}

/* reduced motion */
@media (prefers-reduced-motion: reduce){
  .q-scope-{{ section.id }} .q-cta-btn{
    transition: none;
  }
  .q-scope-{{ section.id }} .q-cta-btn:hover{
    transform: none;
  }
}

  </style>

  <div class="q-wrap">
    {%- if has_header -%}
      <header class="q-header">
        {%- if s.title != blank -%}
          <h2 style="margin:0;color:var(--q-title-color)">{{ s.title | escape }}</h2>
        {%- endif -%}
        {%- if s.subtitle != blank -%}
          <div class="q-subtitle rte">{{ s.subtitle }}</div>
        {%- endif -%}
      </header>
    {%- endif -%}

    <div class="q-tiles" role="list" aria-label="{{ s.aria_label | default: s.title | default: 'Column builder' | escape }}">
      {%- for block in tiles -%}
        {%- liquid
          assign b = block.settings

          assign ratio_class = 'q-ratio-16-9'
          if media_ratio == 'ratio_4_3'
            assign ratio_class = 'q-ratio-4-3'
          elsif media_ratio == 'ratio_1_1'
            assign ratio_class = 'q-ratio-1-1'
          elsif media_ratio == 'ratio_natural'
            assign ratio_class = 'q-ratio-natural'
          endif

          assign img_alt = ''
          if b.image != blank
            assign img_alt = b.image.alt
            if img_alt == blank
              assign img_alt = b.title
            endif
            if img_alt == blank
              assign img_alt = 'Tile image'
            endif
          endif

          assign show_icon = false
          if b.icon != blank
            assign show_icon = true
          endif

          assign show_media = false
          if b.image != blank
            assign show_media = true
          endif

          assign show_title = false
          if b.title != blank
            assign show_title = true
          endif

          assign show_body = false
          if b.body != blank
            assign show_body = true
          endif

          assign show_cta = false
          if b.cta_label != blank and b.cta_url != blank
            assign show_cta = true
          endif

          assign cta_style = b.cta_style | default: 'link'
          assign btn_style = b.button_style | default: 'solid'

          assign icon_src = ''
          if show_icon
            assign icon_src = 'icons/' | append: b.icon | append: '.svg'
          endif
        -%}

        <article
          class="q-tile"
          role="listitem"
          {{ block.shopify_attributes }}
          style="
            --q-tile-title-size: {{ b.title_size | default: 'var(--q-font-size-lg)' }};
            --q-tile-body-size: {{ b.body_size | default: 'var(--q-font-size-base)' }};
            --q-tile-title-color: {{ b.title_color | default: 'var(--q-title-color)' }};
            --q-tile-body-color: {{ b.body_color | default: 'var(--q-body-color)' }};
            --q-icon-color: {{ b.icon_color | default: 'var(--q-icon-color)' }};
          "
        >
          <div class="q-tile-inner">
            {%- if show_icon -%}
              <div class="q-icon" aria-hidden="true">
                <img
                  src="{{ icon_src | asset_url }}"
                  alt=""
                  loading="lazy"
                  decoding="async"
                >
              </div>
            {%- endif -%}

            {%- if show_media -%}
              <figure class="q-media {{ ratio_class }}">
                {{ b.image | image_url: width: 1600 | image_tag:
                  loading: 'lazy',
                  decoding: 'async',
                  alt: img_alt
                }}
              </figure>
            {%- endif -%}

            {%- if show_title -%}
              <h3 class="q-title">{{ b.title | escape }}</h3>
            {%- endif -%}

            {%- if show_body -%}
              <div class="q-body rte">{{ b.body }}</div>
            {%- endif -%}

            {%- if show_cta -%}
              <div class="q-cta">
                {%- if cta_style == 'button' -%}
                  <a class="q-cta-btn q-btn-{{ btn_style }}" href="{{ b.cta_url }}" aria-label="{{ b.cta_label | escape }}">
                    {{ b.cta_label | escape }}
                  </a>
                {%- else -%}
                  <a class="q-cta-link" href="{{ b.cta_url }}" aria-label="{{ b.cta_label | escape }}">
                    {{ b.cta_label | escape }}
                  </a>
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        </article>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Column Builder",
  "tag": "section",
  "class": "section section--quadratum basic-content-helper-column-builder",
  "settings": [
    { "type": "header", "content": "Layout" },
