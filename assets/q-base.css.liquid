/* =======================================================================
   Quadratum • Global Base (typography, spacing, helpers, bleed)
   File: assets/q-base.css.liquid
   -----------------------------------------------------------------------
   - Sets sensible defaults for body, p, span, li, small
   - Harmonizes heading scale (H1–H6) using theme fonts
   - Provides .q-bleed and purge-safe container paddings
   - Adds q-text (shared width/alignment) + q-flow rhythm helpers
   - Token polyfills (colors, rings) to avoid "unstyled" look
   ======================================================================= */

/* -----------------------------------------------------------------------
   1) CSS Custom Props (tokens) w/ theme font defaults
   ----------------------------------------------------------------------- */
:root{
  /* Colors (polyfills; can be mapped to theme settings later) */
  --q-foreground:#111111;
  --q-muted:#6b7280;
  --q-card:#ffffff;
  --q-border:#e5e7eb;
  --q-primary:#111111;

  /* Fonts — respect theme settings w/ safe fallbacks */
  --q-head: {{ settings.type_header_font.family | default: 'ui-sans-serif' }}, {{ settings.type_header_font.fallback_families | default: 'system-ui' }};
  --q-body: {{ settings.type_body_font.family   | default: 'ui-sans-serif' }}, {{ settings.type_body_font.fallback_families   | default: 'system-ui' }};

  /* Base sizing */
  --q-font-size: 16px;        /* mobile base */
  --q-font-size-md: 17px;     /* md+ */
  --q-line: 1.65;             /* comfy body line-height */

  /* Headline scale (override per theme if needed) */
  --q-h1: clamp(2rem, 5vw, 3rem);     /* ~32→48px */
  --q-h2: clamp(1.75rem, 4vw, 2.25rem); /* ~28→36px */
  --q-h3: clamp(1.5rem, 3vw, 1.875rem); /* ~24→30px */
  --q-h4: clamp(1.25rem, 2.5vw, 1.5rem);/* ~20→24px */
  --q-h5: 1.125rem;                    /* 18px */
  --q-h6: 1rem;                        /* 16px */

  /* Rhythm */
  --q-rhythm: 0.875rem;  /* spacing between stacked elements */
  --q-lead: 1.125rem;    /* larger paragraph size on md+ */
}

/* -----------------------------------------------------------------------
   2) Global element defaults
   ----------------------------------------------------------------------- */
html{ -webkit-text-size-adjust: 100%; }
body{
  font-family: var(--q-body);
  font-size: var(--q-font-size);
  line-height: var(--q-line);
  color: var(--q-foreground);
  background-color: var(--q-page, #fff);
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
@media (min-width:768px){
  body{ font-size: var(--q-font-size-md); }
}

/* Paragraphs / inline text — THIS fixes “raw” p/span sizing everywhere */
p, li, span{
  font-size: 1em;
  line-height: var(--q-line);
  color: var(--q-foreground);
}
small{ font-size: 0.875em; }
strong{ font-weight: 600; }

/* Headings */
h1, h2, h3, h4, h5, h6{
  font-family: var(--q-head);
  font-weight: 700;
  line-height: 1.2;
  margin: 0 0 1rem 0;
  letter-spacing: -.01em;
}
h1{ font-size: var(--q-h1); }
h2{ font-size: var(--q-h2); }
h3{ font-size: var(--q-h3); }
h4{ font-size: var(--q-h4); }
h5{ font-size: var(--q-h5); }
h6{ font-size: var(--q-h6); }

/* Lists */
ul, ol{ padding-left: 1.25rem; margin: 0 0 1rem 0; }

