  {{ 'frontend-form-logic.js' | asset_url | script_tag }}

  {%- comment %}
    Waitlist-only JS:
    - Bind variant_id + label (auto on PDP or via /products/{handle}.js)
    - Show picker only when needed
    - Mirror consent to hidden field in custom endpoint mode
    - Enrich tags with product_handle + variant_id (Shopify contact[tags] or custom tags)
  {% endcomment -%}
  <script>
  (function(){
    const root = document.getElementById('{{ anchor }}');
    if (!root) return;

    // Inner form is the real <form> element.
    const activeForm = root.querySelector('form.q-form');
    if (!activeForm) return;

    const bindMode = root.getAttribute('data-bind-mode') || 'auto';
    const productHandle = (root.getAttribute('data-product-handle') || '').trim();

    const variantWrap = root.querySelector('[data-q-variant-wrap]');
    const variantPicker = root.querySelector('[data-variant-picker]');
    const variantIdInput = activeForm.querySelector('[name="variant_id"]');
    const variantLabelInput = activeForm.querySelector('[name="variant_label"]');

    const tagsShopify = activeForm.querySelector('input[name="contact[tags]"]');
    const tagsCustom  = activeForm.querySelector('input[name="tags"]');

    function sanitizeTagValue(val){
      return String(val || '')
        .replace(/,/g, ' ')
        .replace(/\s+/g, ' ')
        .trim()
        .slice(0, 80);
    }
    function parseTags(str){
      return String(str || '').split(',').map(t => t.trim()).filter(Boolean);
    }
    function uniqPush(list, tag){
      const t = String(tag || '').trim();
      if (!t) return;
      if (list.indexOf(t) === -1) list.push(t);
    }
    function setTags(tagStr){
      if (tagsShopify) tagsShopify.value = tagStr;
      if (tagsCustom) tagsCustom.value = tagStr;
    }
    function getTags(){
      return parseTags((tagsShopify && tagsShopify.value) || (tagsCustom && tagsCustom.value) || '');
    }
    function addMetaTags(meta){
      const tags = getTags();
      if (meta.product_handle) uniqPush(tags, 'product=' + sanitizeTagValue(meta.product_handle));
      if (meta.variant_id) uniqPush(tags, 'variant_id=' + sanitizeTagValue(meta.variant_id));
      setTags(tags.join(', '));
    }

    function toggleVariantPicker(show){
      if (!variantWrap) return;
      root.classList.toggle('no-variant', !!show);
      variantWrap.style.display = show ? '' : 'none';

      if (variantPicker){
        if (show) {
          variantPicker.setAttribute('required', 'required');
          variantWrap.setAttribute('data-required', 'true');
        } else {
          variantPicker.removeAttribute('required');
          variantWrap.removeAttribute('data-required');
        }
      }
    }

    function applyVariant(v){
      if (variantIdInput) variantIdInput.value = v.id || '';
      if (variantLabelInput) variantLabelInput.value = v.label || '';
      addMetaTags({ product_handle: productHandle || '', variant_id: v.id || '' });
    }

    function readVariantFromPDP(){
      let id = '';
      let label = '';

      const selectId = document.querySelector('select[name="id"]');
      if (selectId && selectId.value){
        id = selectId.value;
        label = selectId.options[selectId.selectedIndex]?.text || '';
      }

      if (!id){
        const hiddenId = document.querySelector('input[name="id"]');
        if (hiddenId && hiddenId.value) id = hiddenId.value;
      }

      if (!id){
        const chosen = document.querySelector('[data-variant-id].is-selected,[data-variant-id][aria-checked="true"]');
        if (chosen){
          id = chosen.getAttribute('data-variant-id') || '';
          label = chosen.getAttribute('data-variant-label') || (chosen.textContent || '').trim();
        }
      }

      if (id && !label){
        try{
          const jsonEl = document.querySelector('script[type="application/json"][data-product]') || document.querySelector('script.product-json');
          const productJson = jsonEl ? JSON.parse(jsonEl.textContent) : (window.meta && window.meta.product) || null;
          if (productJson && productJson.variants){
            const match = productJson.variants.find(v => String(v.id) === String(id));
            if (match) label = (match.title || '').trim();
          }
        }catch(_e){}
      }

      return { id, label };
    }

    async function fetchProductJSON(handle){
      if (!handle) return null;
      try{
        const res = await fetch('/products/' + encodeURIComponent(handle) + '.js', { credentials: 'same-origin' });
        if (!res.ok) return null;
        return await res.json();
      }catch(_e){}
      return null;
    }

    function populatePicker(variants){
      if (!variantPicker || !variants || !variants.length) return false;

      for (let i = variantPicker.options.length - 1; i > 0; i--) variantPicker.remove(i);

      variants.forEach(v => {
        const opt = document.createElement('option');
        opt.value = v.id;
        opt.textContent = (v.public_title || v.title || 'Variant') + (v.available ? '' : ' — Sold out');
        variantPicker.appendChild(opt);
      });

      return true;
    }

    async function ensurePickerOptions(){
      try{
        const jsonEl = document.querySelector('script[type="application/json"][data-product]') || document.querySelector('script.product-json');
        if (jsonEl){
          const productJson = JSON.parse(jsonEl.textContent);
          if (productJson && productJson.variants) return populatePicker(productJson.variants);
        }
      }catch(_e){}

      const p = await fetchProductJSON(productHandle);
      if (p && p.variants) return populatePicker(p.variants);

      return false;
    }

    async function initVariantBinding(){
      if (bindMode === 'manual'){
        const ok = await ensurePickerOptions();
        toggleVariantPicker(true);
        if (!ok) return;

        variantPicker.addEventListener('change', () => {
          const v = {
            id: variantPicker.value || '',
            label: variantPicker.options[variantPicker.selectedIndex]?.text || ''
          };
          applyVariant(v);
        }, { passive: true });

        return;
      }

      const initial = readVariantFromPDP();
      if (initial.id){
        applyVariant(initial);
        toggleVariantPicker(false);
      } else {
        const ok = await ensurePickerOptions();
        toggleVariantPicker(true);
        if (ok && variantPicker){
          variantPicker.addEventListener('change', () => {
            const v = {
              id: variantPicker.value || '',
              label: variantPicker.options[variantPicker.selectedIndex]?.text || ''
            };
            applyVariant(v);
          }, { passive: true });
        }
      }

      document.addEventListener('change', (e) => {
        const t = e.target;
        if (t && t.matches && t.matches('select[name="id"]')){
          const v = readVariantFromPDP();
          if (v.id){
            applyVariant(v);
            toggleVariantPicker(false);
          }
        }
      }, { passive: true });
    }

    // Consent mirror (custom endpoint only)
    const consentToggle = activeForm.querySelector('[data-consent]');
    const consentHidden = activeForm.querySelector('input[name="consent"]');
    if (consentToggle && consentHidden){
      const sync = () => { consentHidden.value = consentToggle.checked ? 'true' : 'false'; };
      consentToggle.addEventListener('change', sync, { passive: true });
      sync();
    }

    // initial meta tag for product handle (even if variant unknown yet)
    if (productHandle) addMetaTags({ product_handle: productHandle });

    initVariantBinding();
  })();
  </script>
