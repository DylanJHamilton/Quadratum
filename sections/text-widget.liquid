<!-- sections/text-widget.liquid -->
<section class="text-widget" style="padding: 40px; text-align: center;">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.subheading }}</p>
  <a href="{{ section.settings.link_url }}" class="button" style="display: inline-block; padding: 12px 24px; background: #000; color: #fff; text-decoration: none; margin-top: 20px;">
    {{ section.settings.link_label }}
  </a>
</section>
{% schema %}
{
  "name": "Text Widget",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Quadratum"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Use this widget to build your playground and test your new section blocks."
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "Button Text",
      "default": "Open Playground"
    }
  ],
  "presets": [
    {
      "name": "Text Widget",
      "category": "Custom"
    }
  ]
}
{% endschema %}
