{% stylesheet %}
  .q-social-micro-post-strip .q-micro-post-strip {
    margin-top: 16px;
  }

  .q-social-micro-post-strip .q-micro-post-strip--strip {
    display: flex;
    gap: 16px;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    padding-bottom: 4px;
  }

  .q-social-micro-post-strip .q-micro-post-strip--grid {
    display: grid;
    gap: 16px;
    grid-template-columns: 1fr;
  }

  @media (min-width: 750px) {
    .q-social-micro-post-strip .q-micro-post-strip--grid {
      grid-template-columns: repeat(var(--q-micro-post-cols-desktop, 3), minmax(0, 1fr));
    }
  }

  .q-social-micro-post-strip .q-micro-post-strip__placeholder {
    padding: 16px;
    border: 1px dashed rgba(0, 0, 0, 0.2);
    border-radius: 12px;
  }
  .q-social-micro-post-strip .q-micro-post-strip__placeholder p { margin: 0; }

  /* Card layout only ‚Äî colors handled by theme tokens / q-card */
  .q-social-micro-post-strip .q-micro-post-card {
    min-width: 280px;
  }
  .q-social-micro-post-strip .q-micro-post-strip--grid .q-micro-post-card {
    min-width: 0;
  }

  .q-social-micro-post-strip .q-micro-post-card__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 12px;
    margin-bottom: 10px;
  }

  .q-social-micro-post-strip .q-micro-post-card__platform {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    white-space: nowrap;
    font-size: 0.9em;
  }

  .q-social-micro-post-strip .q-micro-post-card__platform svg {
    width: 18px;
    height: 18px;
    display: block;
  }

  .q-social-micro-post-strip .q-micro-post-card__identity {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 0;
  }

  .q-social-micro-post-strip .q-micro-post-card__display-name {
    font-weight: 600;
    line-height: 1.2;
  }

  .q-social-micro-post-strip .q-micro-post-card__handle {
    font-size: 0.92em;
    opacity: 0.8;
    line-height: 1.2;
  }

  .q-social-micro-post-strip .q-micro-post-card__text {
    margin: 0;
    line-height: 1.45;
  }

  .q-social-micro-post-strip .q-micro-post-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    margin-top: 12px;
  }

  .q-social-micro-post-strip .q-micro-post-card__timestamp {
    font-size: 0.9em;
    opacity: 0.8;
  }

  .q-social-micro-post-strip .q-micro-post-card__link {
    font-size: 0.95em;
    text-decoration: underline;
    text-underline-offset: 2px;
    white-space: nowrap;
  }

  /* Prevent global flex/grid distribution from creating giant gaps */
.q-social-micro-post-strip .q-micro-post-strip {
  justify-content: start;
  align-content: start;
}

/* Keep cards at sensible widths in strip mode */
.q-social-micro-post-strip .q-micro-post-strip--strip {
  grid-auto-columns: minmax(280px, 85%);
}

/* Desktop: true grid columns with normal gaps */
@media (min-width: 750px) {
  .q-social-micro-post-strip .q-micro-post-strip--strip {
    grid-auto-flow: initial;
    grid-auto-columns: initial;
    grid-template-columns: repeat(var(--q-micro-post-cols-desktop, 3), minmax(0, 1fr));
  }
}

