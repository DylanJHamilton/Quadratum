{% comment %}
  Quadratum â€¢ Classic CTA Banner (Multi-variant)
  Variants:
  1) newsletter   2) call   3) shop_collection   4) buy_now
  5) visit_store  6) download_app  7) book_appointment  8) refer_friend
  9) limited_offer  10) join_loyalty
{% endcomment %}

{% assign s = section.settings %}

{% assign container_pad = '' %}
{% if s.container_mode == 'contained' %}
  {% assign container_pad = 'px-4 md:px-6' %}
{% endif %}

{% assign visibility_classes = '' %}
{% if s.hide_on_mobile %}{% assign visibility_classes = visibility_classes | append: ' hidden md:block' %}{% endif %}
{% if s.hide_on_desktop %}{% assign visibility_classes = visibility_classes | append: ' md:hidden' %}{% endif %}

{% assign sizes_bg = '100vw' %}
{% assign widths_bg = '960,1280,1600,1920,2240' %}

{% assign href1 = s.cta_link %}
{% if href1 == blank and s.cta_product %}{% assign href1 = s.cta_product.url %}{% endif %}
{% if href1 == blank and s.cta_collection %}{% assign href1 = s.cta_collection.url %}{% endif %}
{% if href1 == blank and s.cta_article %}{% assign href1 = s.cta_article.url %}{% endif %}

{% assign href2 = s.cta2_link %}
{% if href2 == blank and s.cta2_product %}{% assign href2 = s.cta2_product.url %}{% endif %}
{% if href2 == blank and s.cta2_collection %}{% assign href2 = s.cta2_collection.url %}{% endif %}
{% if href2 == blank and s.cta2_article %}{% assign href2 = s.cta2_article.url %}{% endif %}

{%- comment -%} Compute spacing fallback in CSS (no JS) {%- endcomment -%}
{% assign pad_mobile = 40 %}
{% assign pad_desktop = 56 %}
{% case s.pad_y %}
  {% when 'py-8 md:py-12' %}
    {% assign pad_mobile = 32 %}
    {% assign pad_desktop = 48 %}
  {% when 'py-10 md:py-14' %}
    {% assign pad_mobile = 40 %}
    {% assign pad_desktop = 56 %}
  {% when 'py-14 md:py-20' %}
    {% assign pad_mobile = 56 %}
    {% assign pad_desktop = 80 %}
{% endcase %}

<section
  id="{{ s.anchor_id | default: 'section-' | append: section.id }}"
  class="q-classic-cta-banner relative overflow-hidden {{ s.pad_y | default: 'py-10 md:py-14' }}{{ visibility_classes }}"
  role="region"
  aria-label="{{ s.region_label | default: 'Call to action' }}"
>
  {%- comment -%} Fallback styles: spacing, container, panel, and token polyfill {%- endcomment -%}
  <style>
    /* Outer vertical spacing even if py-* utilities were purged */
    #{{ s.anchor_id | default: 'section-' | append: section.id }}{
      padding-top: {{ pad_mobile }}px;
      padding-bottom: {{ pad_mobile }}px;
    }
    @media (min-width: 768px){
      #{{ s.anchor_id | default: 'section-' | append: section.id }}{
        padding-top: {{ pad_desktop }}px;
        padding-bottom: {{ pad_desktop }}px;
      }
    }

    /* Container side padding + max width */
    #{{ s.anchor_id | default: 'section-' | append: section.id }} .q-wrap{
      max-width: 1280px;
      margin-left: auto; margin-right: auto;
      padding-left: 16px; padding-right: 16px;
    }
    @media (min-width:768px){
      #{{ s.anchor_id | default: 'section-' | append: section.id }} .q-wrap{
        padding-left: 24px; padding-right: 24px;
      }
    }

    /* Panel look + centered content + min-height */
    #{{ s.anchor_id | default: 'section-' | append: section.id }} .q-panel{
      background: #fff;
      border: 1px solid #e5e7eb; /* gray-200 */
      border-radius: 16px;
      padding: 32px;
    }
    @media (min-width:768px){
      #{{ s.anchor_id | default: 'section-' | append: section.id }} .q-panel{
        padding: 40px;
      }
    }
    #{{ s.anchor_id | default: 'section-' | append: section.id }} .q-panel--center{
      min-height: {{ s.min_height | default: 240 }}px;
      display: flex; flex-direction: column; justify-content: center;
    }

    /* Token polyfill so it doesn't look bare without Tailwind tokens */
    .q-classic-cta-banner .bg-card{ background-color:#ffffff; }
    .q-classic-cta-banner .bg-background{ background-color:#ffffff; }
    .q-classic-cta-banner .text-foreground{ color:#111111; }
    .q-classic-cta-banner .text-foreground\/85{ color:rgba(17,17,17,.85); }
    .q-classic-cta-banner .text-muted-foreground{ color:#6b7280; }
    .q-classic-cta-banner .border-input{ border-color:#d1d5db; }
    .q-classic-cta-banner .bg-primary{ background-color:#111111; }
    .q-classic-cta-banner .text-primary-foreground{ color:#ffffff; }
    .q-classic-cta-banner .hover\:bg-accent:hover{ background-color:#f3f4f6; }
    .q-classic-cta-banner .hover\:text-accent-foreground:hover{ color:#111111; }
    .q-classic-cta-banner .ring-border{ --tw-ring-color: rgba(229,231,235,1); --tw-ring-opacity:1; }
  </style>

  {%- if s.background_image != blank -%}
    <div class="absolute inset-0 -z-20">
      {{ s.background_image
        | image_url: width: 2240
        | image_tag:
          widths: widths_bg,
          sizes: sizes_bg,
          loading: 'lazy',
          class: 'absolute inset-0 w-full h-full object-cover',
          alt: s.bg_image_alt }}
      <div class="absolute inset-0" aria-hidden="true"
           style="background-color: {{ s.overlay_color }}; opacity: {{ s.overlay_opacity | divided_by: 100.0 }};">
      </div>
    </div>
  {%- endif -%}

  <div class="relative">
    <div class="q-wrap mx-auto max-w-screen-xl {{ container_pad }}">
      <div class="q-panel q-panel--center rounded-2xl ring-1 ring-border bg-card px-6 py-8 md:px-10 md:py-10" style="min-height: {{ s.min_height | default: 240 }}px;">
        <div class="{{ s.text_align | default: 'text-left' }}">
          {% if s.kicker != blank %}
            <p class="text-sm font-semibold tracking-wide uppercase text-muted-foreground">{{ s.kicker }}</p>
          {% endif %}
          {% if s.heading != blank %}
            {% if s.heading_level == 'h1' %}
              <h1 class="mt-1 text-2xl md:text-4xl font-semibold leading-tight text-foreground">{{ s.heading | escape }}</h1>
            {% else %}
              <h2 class="mt-1 text-2xl md:text-4xl font-semibold leading-tight text-foreground">{{ s.heading | escape }}</h2>
            {% endif %}
          {% endif %}
          {% if s.subheading != blank %}
            <p class="mt-3 text-base md:text-lg text-foreground/85 {% if s.hide_sub_mobile %}hidden md:block{% endif %}">
              {{ s.subheading }}
            </p>
          {% endif %}
        </div>

        <div class="mt-5">
          {% assign variant = s.variant | default: 'newsletter' %}
          {%- case variant -%}

            {%- when 'newsletter' -%}
              <div class="{{ s.text_align | default: 'text-left' }}">
                {% form 'customer' %}
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  {% if form.posted_successfully? %}
                    <p class="text-sm" style="color:#059669">{{ s.news_success_text }}</p>
                  {% else %}
                    {% if form.errors %}
                      <div class="text-sm" style="color:#dc2626">{{ form.errors | default_errors }}</div>
                    {% endif %}
                    <div class="mt-3 flex flex-col sm:flex-row gap-3 sm:items-center {% if s.text_align == 'text-center' %}sm:justify-center{% elsif s.text_align == 'text-right' %}sm:justify-end{% else %}sm:justify-start{% endif %}">
                      <input type="email" name="contact[email]" required
                             class="w-full sm:w-80 rounded-md border border-input bg-background px-3 py-2 text-sm"
                             placeholder="{{ s.news_placeholder }}">
                      <button type="submit"
                              class="inline-flex items-center justify-center rounded-md px-4 py-2 text-sm font-medium focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 transition bg-primary text-primary-foreground hover:opacity-90"
                              style="border-radius: {{ s.button_radius }}px;"
                              data-cta="primary"
                              aria-label="{{ s.cta_aria_label | default: s.cta_text | escape }}">
                        {{ s.cta_text }}
                      </button>
                    </div>
                    {% if s.news_disclaimer != blank %}
                      <p class="mt-2 text-xs" style="color:rgba(17,17,17,.7)">{{ s.news_disclaimer }}</p>
                    {% endif %}
                  {% endif %}
                {% endform %}
              </div>

            {%- when 'call' -%}
              <div class="{{ s.text_align | default: 'text-left' }}">
                {% if s.phone_number != blank %}
                  <a href="tel:{{ s.phone_number | remove: ' ' }}"
                     class="inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 transition bg-primary text-primary-foreground hover:opacity-90"
                     style="border-radius: {{ s.button_radius }}px;"
                     data-cta="primary"
                     aria-label="{{ s.cta_aria_label | default: s.cta_text | escape }}">
                    {{ s.cta_text }} {{ s.phone_number }}
                  </a>
                {% endif %}
                {% if href2 != blank and s.cta2_text != blank %}
                  <a href="{{ href2 }}" data-cta="secondary"
                     class="ml-3 inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium border bg-background hover:bg-accent hover:text-accent-foreground"
                     style="border-color:#d1d5db; border-radius: {{ s.button_radius }}px;">
                    {{ s.cta2_text }}
                  </a>
                {% endif %}
              </div>

            {%- when 'shop_collection' -%}
              {% if s.pick_collection %}
                <div class="{{ s.text_align | default: 'text-left' }}">
                  <a href="{{ s.pick_collection.url }}" data-cta="primary"
                     class="inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium bg-primary text-primary-foreground hover:opacity-90"
                     style="border-radius: {{ s.button_radius }}px;">
                    {{ s.cta_text }}
                  </a>
                  {% if href2 != blank and s.cta2_text != blank %}
                    <a href="{{ href2 }}" data-cta="secondary"
                       class="ml-3 inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium border bg-background hover:bg-accent hover:text-accent-foreground"
                       style="border-color:#d1d5db; border-radius: {{ s.button_radius }}px;">
                      {{ s.cta2_text }}
                    </a>
                  {% endif %}
                </div>
              {% endif %}

            {%- when 'buy_now' -%}
              {% assign p = s.pick_product %}
              {% assign has_product = false %}
              {% if p != blank %}{% assign has_product = true %}{% endif %}
              {% if has_product %}
                {% assign v = p.selected_or_first_available_variant %}
                <form method="post" action="/cart/add" enctype="multipart/form-data" class="{{ s.text_align | default: 'text-left' }} flex flex-wrap items-center gap-3" data-q-quickadd>
                  <input type="hidden" name="id" value="{{ v.id }}">
                  <input type="hidden" name="quantity" value="1">
                  <button type="submit"
                          class="inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium bg-primary text-primary-foreground hover:opacity-90"
                          style="border-radius: {{ s.button_radius }}px;"
                          {% unless v.available %}disabled{% endunless %}
                          data-cta="primary"
                          aria-label="{{ s.cta_aria_label | default: s.cta_text | escape }}">
                    {{ s.cta_text }}
                  </button>
                  {% if href2 != blank and s.cta2_text != blank %}
                    <a href="{{ href2 }}" data-cta="secondary"
                       class="inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium border bg-background hover:bg-accent hover:text-accent-foreground"
                       style="border-color:#d1d5db; border-radius: {{ s.button_radius }}px;">
                      {{ s.cta2_text }}
                    </a>
                  {% endif %}
                </form>
              {% endif %}

            {%- when 'visit_store' -%}
              <div class="{{ s.text_align | default: 'text-left' }}">
                {% if s.map_url != blank %}
                  <a href="{{ s.map_url }}" target="_blank" rel="noopener" data-cta="primary"
                     class="inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium bg-primary text-primary-foreground hover:opacity-90"
                     style="border-radius: {{ s.button_radius }}px;">
                    {{ s.cta_text }}
                  </a>
                {% endif %}
                {% if s.store_address != blank %}
                  <p class="mt-2 text-sm" style="color:#374151">{{ s.store_address }}</p>
                {% endif %}
              </div>

            {%- when 'download_app' -%}
              <div class="{{ s.text_align | default: 'text-left' }} flex flex-wrap gap-3">
                {% if s.ios_url != blank %}
                  <a href="{{ s.ios_url }}" data-cta="primary"
                     class="inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium bg-primary text-primary-foreground hover:opacity-90"
                     style="border-radius: {{ s.button_radius }}px;">
                    {{ s.cta_text }} iOS
                  </a>
                {% endif %}
                {% if s.android_url != blank %}
                  <a href="{{ s.android_url }}" data-cta="secondary"
                     class="inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium border bg-background hover:bg-accent hover:text-accent-foreground"
                     style="border-color:#d1d5db; border-radius: {{ s.button_radius }}px;">
                    {{ s.cta2_text | default: 'Get Android' }}
                  </a>
                {% endif %}
              </div>

            {%- when 'book_appointment' -%}
              {% if s.booking_url != blank %}
                <div class="{{ s.text_align | default: 'text-left' }}">
                  <a href="{{ s.booking_url }}" data-cta="primary"
                     class="inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium bg-primary text-primary-foreground hover:opacity-90"
                     style="border-radius: {{ s.button_radius }}px;">
                    {{ s.cta_text }}
                  </a>
                </div>
              {% endif %}

            {%- when 'refer_friend' -%}
              {% if s.refer_url != blank %}
                <div class="{{ s.text_align | default: 'text-left' }}">
                  <a href="{{ s.refer_url }}" data-cta="primary"
                     class="inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium bg-primary text-primary-foreground hover:opacity-90"
                     style="border-radius: {{ s.button_radius }}px;">
                    {{ s.cta_text }}
                  </a>
                </div>
              {% endif %}

            {%- when 'limited_offer' -%}
              <div class="{{ s.text_align | default: 'text-left' }}">
                {% if s.deadline_iso != blank %}
                  <div class="text-sm" style="color:#374151" data-q-countdown data-deadline="{{ s.deadline_iso }}">
                    <span data-dd>00</span>d : <span data-hh>00</span>h : <span data-mm>00</span>m : <span data-ss>00</span>s
                  </div>
                {% endif %}
                {% if href1 != blank and s.cta_text != blank %}
                  <a href="{{ href1 }}" data-cta="primary"
                     class="mt-3 inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium bg-primary text-primary-foreground hover:opacity-90"
                     style="border-radius: {{ s.button_radius }}px;">
                    {{ s.cta_text }}
                  </a>
                {% endif %}
              </div>

            {%- when 'join_loyalty' -%}
              <div class="{{ s.text_align | default: 'text-left' }} flex flex-wrap gap-3">
                <a href="{{ s.loyalty_join_url | default: '/account/register' }}" data-cta="primary"
                   class="inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium bg-primary text-primary-foreground hover:opacity-90"
                   style="border-radius: {{ s.button_radius }}px;">
                  {{ s.cta_text | default: 'Join now' }}
                </a>
                <a href="{{ s.loyalty_signin_url | default: '/account/login' }}" data-cta="secondary"
                   class="inline-flex items-center justify-center rounded-md px-5 py-2.5 text-sm font-medium border bg-background hover:bg-accent hover:text-accent-foreground"
                   style="border-color:#d1d5db; border-radius: {{ s.button_radius }}px;">
                  {{ s.cta2_text | default: 'Sign in' }}
                </a>
              </div>

          {%- endcase -%}
        </div>
      </div>
    </div>
  </div>

  {% if s.send_events %}
    <script>
      (function(){
        var root = document.getElementById('{{ s.anchor_id | default: 'section-' | append: section.id }}');
        if(!root) return;
        root.addEventListener('click', function(e){
          var a = e.target.closest('[data-cta]');
          if(!a || !{{ s.send_events | json }}) return;
          var payload = { component: 'cta_banner', cta_type: a.getAttribute('data-cta') || 'primary', href: a.getAttribute('href') || '' };
          window.dispatchEvent(new CustomEvent('quadratum:cta', { detail: payload }));
          if(window.dataLayer && Array.isArray(window.dataLayer)){
            window.dataLayer.push({ event: 'quadratum_cta', component: payload.component, cta_type: payload.cta_type, href: payload.href });
          }
        });

        var cd = root.querySelector('[data-q-countdown]');
        if (cd) {
          var dl = cd.getAttribute('data-deadline');
          var end = dl ? new Date(dl) : null;
          if (end && !isNaN(end)) {
            var pad = function(n){ return String(n).padStart(2,'0'); };
            var tick = function(){
              var now = new Date();
              var diff = end - now;
              if (diff <= 0) { cd.textContent = '{{ s.countdown_done_text | default: "Offer ended" }}'; clearInterval(tid); return; }
              var secs = Math.floor(diff/1000);
              var d = Math.floor(secs/86400); secs -= d*86400;
              var h = Math.floor(secs/3600);  secs -= h*3600;
              var m = Math.floor(secs/60);    secs -= m*60;
              cd.querySelector('[data-dd]').textContent = pad(d);
              cd.querySelector('[data-hh]').textContent = pad(h);
              cd.querySelector('[data-mm]').textContent = pad(m);
              cd.querySelector('[data-ss]').textContent = pad(secs);
            };
            var tid = setInterval(tick, 1000);
            tick();
          }
        }
      })();
    </script>
  {% endif %}
</section>

