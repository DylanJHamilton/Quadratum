  snippets/social-micro-post-card.liquid
  Quadratum â€” Micro-post card (X / Bluesky)
{%- endcomment -%}

{%- liquid
  assign b = block.settings
  assign s = section_settings

  assign platform = b.platform | default: 'x'
  assign display_name = b.display_name
  assign handle = b.handle
  assign post_text = b.post_text
  assign timestamp = b.timestamp

  assign post_url = b.post_url
  assign has_link = false
  if post_url != blank and post_url != '#'
    assign has_link = true
  endif

  assign platform_label = 'X'
  if platform == 'bluesky'
    assign platform_label = 'Bluesky'
  endif

  assign link_label = b.link_label | default: 'View post'
-%}

<article class="q-micro-post-card" {{ block.shopify_attributes }}>
  <header class="q-micro-post-card__header">
    {%- if s.show_platform_badge -%}
      <div class="q-micro-post-card__platform" aria-hidden="true">
        <span class="q-micro-post-card__platform-icon">
          {%- render 'icon-social', name: platform -%}
        </span>
        <span class="q-micro-post-card__platform-label">{{ platform_label | escape }}</span>
      </div>
    {%- endif -%}

    <div class="q-micro-post-card__identity">
      {%- if display_name != blank -%}
        <span class="q-micro-post-card__display-name">{{ display_name | escape }}</span>
      {%- endif -%}

      {%- if s.show_handle and handle != blank -%}
        <span class="q-micro-post-card__handle">{{ handle | escape }}</span>
      {%- endif -%}
    </div>
  </header>

  {%- if post_text != blank -%}
    <div class="q-micro-post-card__body">
      <p class="q-micro-post-card__text">{{ post_text | escape }}</p>
    </div>
  {%- endif -%}

  <footer class="q-micro-post-card__footer">
    <div class="q-micro-post-card__meta">
      {%- if s.show_timestamp and timestamp != blank -%}
        <span class="q-micro-post-card__timestamp">{{ timestamp | escape }}</span>
      {%- endif -%}
    </div>

    {%- if has_link -%}
      <a
        href="{{ post_url }}"
        class="q-micro-post-card__link"
        aria-label="{{ link_label | escape }}"
        {%- if s.open_links_in_new_tab -%} target="_blank" rel="noopener noreferrer"{%- endif -%}
      >
        {{ link_label | escape }}
      </a>
    {%- endif -%}
  </footer>
</article>

<style>
  .q-micro-post-card {
    border: 1px solid rgba(0,0,0,0.08);
    border-radius: 16px;
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .q-micro-post-card__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 12px;
  }

  .q-micro-post-card__platform {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid rgba(0,0,0,0.08);
    line-height: 1;
    white-space: nowrap;
    flex: 0 0 auto;
  }

  .q-micro-post-card__platform-icon svg {
    width: 16px;
    height: 16px;
    display: block;
  }

  .q-micro-post-card__platform-label {
    font-size: 0.9em;
    opacity: 0.85;
  }

  .q-micro-post-card__identity {
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 2px;
    text-align: right;
  }

  .q-micro-post-card__display-name {
    font-weight: 600;
    line-height: 1.2;
  }

  .q-micro-post-card__handle {
    opacity: 0.75;
    font-size: 0.92em;
    line-height: 1.2;
  }

  .q-micro-post-card__text {
    margin: 0;
    line-height: 1.45;
  }

  .q-micro-post-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    margin-top: auto;
  }

  .q-micro-post-card__timestamp {
    opacity: 0.75;
    font-size: 0.9em;
  }

  .q-micro-post-card__link {
    white-space: nowrap;
    font-weight: 600;
    text-decoration: underline;
    text-underline-offset: 3px;
  }
  
</style>
