/* Containers */
.container {
  width: 100%;
  max-width: var(--container-lg);
  margin-inline: auto;
  padding-inline: var(--space-md);
}
@media (min-width: {{ settings.container_xl | default: 1440 }}px) {
  .container { max-width: var(--container-xl); }
}

/* Section padding */
.section-pad { padding-block: var(--section-pt) var(--section-pb); }

/* Simple headings mapping (optional, aligns with tokens) */
.h1{ font-family:var(--font-head); font-size:var(--fs-h1); letter-spacing:var(--ls-head); text-transform:var(--tt-head); }
.h2{ font-family:var(--font-head); font-size:var(--fs-h2); letter-spacing:var(--ls-head); text-transform:var(--tt-head); }
.h3{ font-family:var(--font-head); font-size:var(--fs-h3); letter-spacing:var(--ls-head); text-transform:var(--tt-head); }
.h4{ font-family:var(--font-head); font-size:var(--fs-h4); letter-spacing:var(--ls-head); text-transform:var(--tt-head); }
.h5{ font-family:var(--font-head); font-size:var(--fs-h5); letter-spacing:var(--ls-head); text-transform:var(--tt-head); }
.h6{ font-family:var(--font-head); font-size:var(--fs-h6); letter-spacing:var(--ls-head); text-transform:var(--tt-head); }
