{% comment %}
  Quadratum — Special Offers Banner
  Compositions:
    • hero_only        – Cinematic hero only
    • hero_plus_grid   – Hero + wide 2-up promo grid below
    • split_one        – Hero text + ONE large promo (right/left weight)

  Guarantees:
    - If video is selected but missing, we fall back to image.
    - If no hero image is set, we fall back to the first promo block’s image.
    - Background is rendered per composition.
    - Content always sits above the background.
    - Spacing and widths are controllable from schema (no JSON hacks).
{% endcomment %}

{% liquid
  assign s = section.settings

  # Container width from theme kit
  assign cw = settings.container_lg | default: 1152
  if settings.style_kit == 'wide'
    assign cw = settings.container_xl | default: 1440
  elsif settings.style_kit == 'cozy'
    assign cw = settings.container_md | default: 960
  elsif settings.style_kit == 'full'
    assign cw = 99999
  endif

  # Container padding helper
  assign inner_pad = ''
  if s.container_mode == 'contained'
    assign inner_pad = 'px-4 md:px-6'
  endif

  # Visibility
  assign vis = ''
  if s.hide_on_mobile
    assign vis = vis | append: ' hidden md:block'
  endif
  if s.hide_on_desktop
    assign vis = vis | append: ' md:hidden'
  endif

  # CTA checks (Liquid-safe)
  assign has_primary = false
  if s.cta_text != blank and s.cta_link != blank
    assign has_primary = true
  endif
  assign has_secondary = false
  if s.cta2_text != blank and s.cta2_link != blank
    assign has_secondary = true
  endif

  # ---- BACKGROUND RESOLUTION ----
  assign bg_mode = s.background_mode | default: 'image'

  assign hero_image = s.background_image
  if hero_image == blank and section.blocks.size > 0
    assign fb_img = section.blocks.first.settings.image
    if fb_img != blank
      assign hero_image = fb_img
    endif
  endif

  assign has_bg_asset = false
  if bg_mode == 'video'
    if s.background_video != blank
      assign has_bg_asset = true
    elsif hero_image != blank
      assign bg_mode = 'image'
      assign has_bg_asset = true
    endif
  elsif bg_mode == 'image' and hero_image != blank
    assign has_bg_asset = true
  endif

  # Scrim opacity (0–1)
  assign scrim_opacity = 0
  if s.overlay_opacity != blank
    assign scrim_opacity = s.overlay_opacity | times: 0.01
  endif

  assign bg_alt = s.bg_image_alt | default: 'Hero background'
  assign composition = s.composition | default: 'hero_plus_grid'

  # has_blocks
  assign has_blocks = false
  if section.blocks.size > 0
    assign has_blocks = true
  endif

  # Precompute inline bg style for image mode
  assign bg_style = ''
  if has_bg_asset and bg_mode == 'image' and hero_image != blank
    assign bg_url = hero_image | image_url: width: 2880
    assign bg_style = 'background-image:url(' | append: bg_url | append: ');background-size:cover;background-position:center;'
  endif
%}

<section id="{{ s.anchor_id | default: 'offers-hero-' | append: section.id }}"
         class="q-offers-hero relative overflow-hidden{{ vis }}"
         role="region"
         aria-label="{{ s.region_label | default: 'Special offers hero' }}">

  <style>
    /* ---------------- Tokens ---------------- */
    #shopify-section-{{ section.id }}{
      --q-head: {{ settings.font_heading.family | default: 'ui-sans-serif' }}, {{ settings.font_heading.fallback_families | default: 'system-ui' }};
      --q-body: {{ settings.font_body.family | default: 'ui-sans-serif' }}, {{ settings.font_body.fallback_families | default: 'system-ui' }};
      --q-primary: {{ settings.color_primary | default: '#111111' }};
      --q-oncolor: {{ settings.text_on_color | default: '#ffffff' }};
      --q-text: {{ settings.text_base | default: '#111111' }};
      --q-muted: {{ settings.text_muted | default: '#9aa0a6' }};
      --q-cw: {{ cw }}px;

      --q-h1: {{ settings.type_h1_size | default: 240 | times: 0.01 | round: 3 }}rem;
      --q-h2: {{ settings.type_h2_size | default: 200 | times: 0.01 | round: 3 }}rem;

      --q-btn-radius: {{ settings.button_radius | default: 12 }}px;
      --q-btn-bw: {{ settings.button_border_width | default: 1 }}px;

      /* Designer knobs (schema-driven) */
      --q-hero-min-d: {{ s.hero_height_d | default: 80 }}vh;
      --q-hero-min-m: {{ s.hero_height_m | default: 64 }}vh;

      /* Explicit hero paddings (stops edge hugging on full-width) */
      --q-hero-pad-x-d: {{ s.hero_pad_x_desktop | default: 64 }}px;
      --q-hero-pad-x-m: {{ s.hero_pad_x_mobile | default: 16 }}px;
      --q-hero-pad-y-d: {{ s.hero_pad_y_desktop | default: 96 }}px;
      --q-hero-pad-y-m: {{ s.hero_pad_y_mobile | default: 72 }}px;

      /* Grid width + gutters (WIDER by default) */
      --q-support-max: {{ s.support_max_w | default: 1600 }}px; /* was 1440 */
      --q-support-offset: {{ s.support_offset_y | default: -48 }}px; /* pull grid up */
      --q-support-gx: {{ s.support_gutter_x | default: 24 }}px; /* narrower gutter for wider feel */

      --q-card-min: {{ s.card_min_h | default: 420 }}px;
      --q-grid-gap: 16px;
      --q-grid-gap-m: 12px;
    }

    /* ---------------- Utilities ---------------- */
    #shopify-section-{{ section.id }} .q-cw{max-width:min(100%,var(--q-cw));margin-left:auto;margin-right:auto;}
    #shopify-section-{{ section.id }} .q-media{position:absolute; inset:0; z-index:0; pointer-events:none;}
    #shopify-section-{{ section.id }} .q-media video{width:100%;height:100%;object-fit:cover;}
    #shopify-section-{{ section.id }} .q-scrim{position:absolute; inset:0; z-index:10; pointer-events:none;}
    #shopify-section-{{ section.id }} .q-layer{position:relative; z-index:20;}

    /* ---------------- Hero band ---------------- */
    #shopify-section-{{ section.id }} .q-hero{
      min-height: var(--q-hero-min-d);
      display:grid; align-items:center;
    }
    @media (max-width: 767px){
      #shopify-section-{{ section.id }} .q-hero{min-height: var(--q-hero-min-m);}
    }

    /* Ensure content sits above bg in all compositions + apply paddings */
    #shopify-section-{{ section.id }} .q-hero-inner{
      position:relative; 
      z-index:30;
      padding-left: var(--q-hero-pad-x-d);
      padding-right: var(--q-hero-pad-x-d);
      padding-top: var(--q-hero-pad-y-d);
      padding-bottom: var(--q-hero-pad-y-d);
    }
    @media (max-width: 767px){
      #shopify-section-{{ section.id }} .q-hero-inner{
        padding-left: var(--q-hero-pad-x-m);
        padding-right: var(--q-hero-pad-x-m);
        padding-top: var(--q-hero-pad-y-m);
        padding-bottom: var(--q-hero-pad-y-m);
      }
    }

    /* Type */
    #shopify-section-{{ section.id }} .q-h1{font-size:var(--q-h1);}
    #shopify-section-{{ section.id }} .q-h2{font-size:var(--q-h2);}
    #shopify-section-{{ section.id }} h1,
    #shopify-section-{{ section.id }} h2{
      font-family:var(--q-head); line-height:1.12; margin:0 0 .75rem 0; color:var(--q-oncolor);
      letter-spacing:-.01em;
    }
    #shopify-section-{{ section.id }} p{font-family:var(--q-body); margin:0; color:var(--q-oncolor);}
    #shopify-section-{{ section.id }} .q-kicker{
      display:inline-flex; align-items:center; gap:.5rem; font-family:var(--q-body);
      font-weight:700; color:var(--q-oncolor); background:rgba(255,255,255,.14);
      padding:.45rem .75rem; border-radius:9999px; margin-bottom:1rem; letter-spacing:.04em; text-transform:uppercase;
      font-size:.8rem;
    }

    /* CTAs */
    #shopify-section-{{ section.id }} .q-ctas{margin-top:1.25rem; display:flex; flex-wrap:wrap; gap:.75rem;}
    #shopify-section-{{ section.id }} .q-cta{
      display:inline-flex; align-items:center; justify-content:center; font-weight:700;
      text-decoration:none; border-radius:var(--q-btn-radius); padding:12px 22px;
      border-width:var(--q-btn-bw); border-style:solid; transition:opacity .15s ease, transform .05s ease;
    }
    #shopify-section-{{ section.id }} .q-cta[data-variant="primary"]{ background:var(--q-primary); border-color:transparent; color:var(--q-oncolor);}
    #shopify-section-{{ section.id }} .q-cta[data-variant="secondary"]{ background:transparent; border-color:var(--q-oncolor); color:var(--q-oncolor);}
    #shopify-section-{{ section.id }} .q-cta:hover{opacity:.92;} #shopify-section-{{ section.id }} .q-cta:active{transform:scale(.985);}

    /* ---------------- Split composition ---------------- */
    #shopify-section-{{ section.id }} .q-split{
      display:grid; gap:28px; grid-template-columns: 1fr;
    }
    @media(min-width: 1024px){
      #shopify-section-{{ section.id }} .q-split{
        {% assign ratio = s.split_ratio | default: 'balanced' %}
        {% if ratio == 'wide_right' %}
          grid-template-columns: minmax(0, 0.8fr) minmax(0, 1.2fr);
        {% elsif ratio == 'wide_left' %}
          grid-template-columns: minmax(0, 1.2fr) minmax(0, 0.8fr);
        {% else %}
          grid-template-columns: minmax(0, 0.95fr) minmax(0, 1.05fr);
        {% endif %}
        align-items: center;
      }
    }

    /* ---------------- Promo Grid ---------------- */
    #shopify-section-{{ section.id }} .q-support-wrap{
      position:relative; 
      z-index:20; 
      padding-left: var(--q-support-gx);
      padding-right: var(--q-support-gx);
      margin-top:32px;  /* tighter stack (was 48) */
      transform: translateY(var(--q-support-offset));
    }
    #shopify-section-{{ section.id }} .q-support-max{
      max-width:var(--q-support-max); 
      margin-left:auto; 
      margin-right:auto;
    }
    #shopify-section-{{ section.id }} .q-support{
      display:grid; 
      gap:var(--q-grid-gap-m);
      grid-template-columns: 1fr;
    }
    @media(min-width:768px){
      #shopify-section-{{ section.id }} .q-support{
        gap:var(--q-grid-gap);
        grid-template-columns: repeat(2, minmax(0,1fr));
      }
    }

    /* Promo Card */
    #shopify-section-{{ section.id }} .q-card{
      position:relative; overflow:hidden; border-radius:20px; min-height:var(--q-card-min);
      background:#0b0b0b; display:flex; align-items:flex-end; border:1px solid rgba(255,255,255,.12);
    }
    #shopify-section-{{ section.id }} .q-card img{position:absolute; inset:0; width:100%; height:100%; object-fit:cover;}
    #shopify-section-{{ section.id }} .q-card .q-grad{
      position:absolute; inset:0; background:linear-gradient(180deg, rgba(0,0,0,.0) 10%, rgba(0,0,0,.55) 75%);
    }
    #shopify-section-{{ section.id }} .q-card .q-body{
      position:relative; width:100%; padding:18px; display:grid; gap:8px; color:#fff;
    }
    #shopify-section-{{ section.id }} .q-chip{
      display:inline-flex; align-items:center; font-weight:800; background:rgba(255,255,255,.18);
      color:#fff; border-radius:9999px; padding:.35rem .6rem; font-size:.78rem; letter-spacing:.02em;
    }
    #shopify-section-{{ section.id }} .q-title{font-family:var(--q-head); font-size:1.15rem; line-height:1.22; margin:0;}
    #shopify-section-{{ section.id }} .q-card .q-btn{margin-top:6px; align-self:start;}
    #shopify-section-{{ section.id }} .q-support > *:only-child { grid-column: 1 / -1; }
  </style>

  <!-- HERO (bg is rendered per instance; content is above bg) -->
  <div class="q-layer q-hero">
    <div class="q-media" aria-hidden="true" style="{{ bg_style }}">
      {% if has_bg_asset and bg_mode == 'video' and s.background_video != blank %}
        <video autoplay muted loop playsinline>
          <source src="{{ s.background_video | escape }}" type="video/mp4">
        </video>
      {% endif %}
      {% if scrim_opacity > 0 %}
        <div class="q-scrim" style="background: {{ s.overlay_color | default: '#000000' }}; opacity: {{ scrim_opacity }};"></div>
      {% endif %}
    </div>

    <div class="q-hero-inner {% if s.container_mode == 'contained' %}q-cw {{ inner_pad }}{% else %}{{ inner_pad }}{% endif %}">
      {% case composition %}
        {% when 'split_one' %}
          <div class="q-split">
            <div>
              <div class="{% if s.text_alignment == 'center' %}text-center mx-auto{% elsif s.text_alignment == 'right' %}text-right ml-auto{% else %}text-left{% endif %}"
                   style="max-width: {{ s.content_measure | default: '60ch' }};">
                {% if s.kicker != blank %}<div class="q-kicker">{{ s.kicker }}</div>{% endif %}
                {% if s.heading != blank %}
                  <{{ s.heading_scale | default: 'h1' }} class="{% if s.heading_scale == 'h2' %}q-h2{% else %}q-h1{% endif %}">{{ s.heading }}</{{ s.heading_scale | default: 'h1' }}>
                {% endif %}
                {% if s.subheading != blank %}<p style="opacity:.92">{{ s.subheading }}</p>{% endif %}
                {% if has_primary or has_secondary %}
                  <div class="q-ctas {% if s.text_alignment == 'center' %}justify-center{% elsif s.text_alignment == 'right' %}justify-end{% else %}justify-start{% endif %}">
                    {% if has_primary %}<a href="{{ s.cta_link }}" class="q-cta" data-variant="primary" aria-label="{{ s.cta_aria | default: s.cta_text }}">{{ s.cta_text }}</a>{% endif %}
                    {% if has_secondary %}<a href="{{ s.cta2_link }}" class="q-cta" data-variant="secondary" aria-label="{{ s.cta2_aria | default: s.cta2_text }}">{{ s.cta2_text }}</a>{% endif %}
                  </div>
                {% endif %}
              </div>
            </div>
            <div>
              {% if has_blocks %}
                {% assign b = section.blocks.first.settings %}
                {% assign card_alt = b.image_alt | default: b.title %}
                <div class="q-support">
                  <div class="q-card">
                    {% if b.image != blank %}
                      {{ b.image | image_url: width: 1440 | image_tag: widths: '960,1200,1440', sizes: '50vw', loading: 'eager', alt: card_alt }}
                    {% endif %}
                    <div class="q-grad"></div>
                    <div class="q-body">
                      {% if b.badge_text != blank %}<span class="q-chip">{{ b.badge_text }}</span>{% endif %}
                      {% if b.title != blank %}<h3 class="q-title">{{ b.title }}</h3>{% endif %}
                      {% if b.link != blank and b.label != blank %}
                        <a href="{{ b.link }}" class="q-cta q-btn" data-variant="secondary" aria-label="{{ b.aria | default: b.label }}">{{ b.label }}</a>
                      {% endif %}
                    </div>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>

        {% when 'hero_only' %}
          <div class="{% if s.text_alignment == 'center' %}text-center mx-auto{% elsif s.text_alignment == 'right' %}text-right ml-auto{% else %}text-left{% endif %}"
               style="max-width: {{ s.content_measure | default: '60ch' }};">
            {% if s.kicker != blank %}<div class="q-kicker">{{ s.kicker }}</div>{% endif %}
            {% if s.heading != blank %}
              <{{ s.heading_scale | default: 'h1' }} class="{% if s.heading_scale == 'h2' %}q-h2{% else %}q-h1{% endif %}">{{ s.heading }}</{{ s.heading_scale | default: 'h1' }}>
            {% endif %}
            {% if s.subheading != blank %}<p style="opacity:.92">{{ s.subheading }}</p>{% endif %}
            {% if has_primary or has_secondary %}
              <div class="q-ctas {% if s.text_alignment == 'center' %}justify-center{% elsif s.text_alignment == 'right' %}justify-end{% else %}justify-start{% endif %}">
                {% if has_primary %}<a href="{{ s.cta_link }}" class="q-cta" data-variant="primary" aria-label="{{ s.cta_aria | default: s.cta_text }}">{{ s.cta_text }}</a>{% endif %}
                {% if has_secondary %}<a href="{{ s.cta2_link }}" class="q-cta" data-variant="secondary" aria-label="{{ s.cta2_aria | default: s.cta2_text }}">{{ s.cta2_text }}</a>{% endif %}
              </div>
            {% endif %}
          </div>

        {% else %}
          {%- comment -%} hero_plus_grid {%- endcomment -%}
          <div class="{% if s.text_alignment == 'center' %}text-center mx-auto{% elsif s.text_alignment == 'right' %}text-right ml-auto{% else %}text-left{% endif %}"
               style="max-width: {{ s.content_measure | default: '66ch' }};">
            {% if s.kicker != blank %}<div class="q-kicker">{{ s.kicker }}</div>{% endif %}
            {% if s.heading != blank %}
              <{{ s.heading_scale | default: 'h1' }} class="{% if s.heading_scale == 'h2' %}q-h2{% else %}q-h1{% endif %}">{{ s.heading }}</{{ s.heading_scale | default: 'h1' }}>
            {% endif %}
            {% if s.subheading != blank %}<p style="opacity:.92">{{ s.subheading }}</p>{% endif %}
            {% if has_primary or has_secondary %}
              <div class="q-ctas {% if s.text_alignment == 'center' %}justify-center{% elsif s.text_alignment == 'right' %}justify-end{% else %}justify-start{% endif %}">
                {% if has_primary %}<a href="{{ s.cta_link }}" class="q-cta" data-variant="primary" aria-label="{{ s.cta_aria | default: s.cta_text }}">{{ s.cta_text }}</a>{% endif %}
                {% if has_secondary %}<a href="{{ s.cta2_link }}" class="q-cta" data-variant="secondary" aria-label="{{ s.cta2_aria | default: s.cta2_text }}">{{ s.cta2_text }}</a>{% endif %}
              </div>
            {% endif %}
          </div>
      {% endcase %}
    </div>
  </div>

  {% if composition == 'hero_plus_grid' and has_blocks %}
    <div class="q-layer q-support-wrap">
      <div class="q-support-max">
        <div class="q-support">
          {% for block in section.blocks %}
            {% assign b = block.settings %}
            {% assign card_alt = b.image_alt | default: b.title %}
            <div class="q-card" {{ block.shopify_attributes }}>
              {% if b.image != blank %}
                {{ b.image | image_url: width: 1600 | image_tag: widths: '960,1200,1440,1600', sizes: '(min-width: 768px) 50vw, 100vw', loading: 'lazy', alt: card_alt }}
              {% endif %}
              <div class="q-grad"></div>
              <div class="q-body">
                {% if b.badge_text != blank %}<span class="q-chip">{{ b.badge_text }}</span>{% endif %}
                {% if b.title != blank %}<h3 class="q-title">{{ b.title }}</h3>{% endif %}
                {% if b.link != blank and b.label != blank %}
                  <a href="{{ b.link }}" class="q-cta q-btn" data-variant="secondary" aria-label="{{ b.aria | default: b.label }}">{{ b.label }}</a>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Offers • Hero",
  "tag": "section",
  "class": "q-offers-hero",
  "settings": [
    { "type": "header", "content": "Composition" },
    { "type": "select", "id": "composition", "label": "Layout", "default": "hero_plus_grid", "options": [
      { "value": "hero_only", "label": "Hero only" },
      { "value": "hero_plus_grid", "label": "Hero + grid below" },
      { "value": "split_one", "label": "Split hero (one promo on right)" }
    ]},

    { "type": "header", "content": "Content" },
    { "type": "text", "id": "kicker", "label": "Kicker", "default": "Featured" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "New season. Big savings." },
    { "type": "select", "id": "heading_scale", "label": "Heading scale", "default": "h1", "options": [
      { "value": "h1", "label": "Hero (H1)" },
      { "value": "h2", "label": "Large (H2)" }
    ] },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Curated bundles, limited drops, and members-only markdowns." },

    { "type": "header", "content": "CTAs" },
    { "type": "text", "id": "cta_text", "label": "Primary label", "default": "Shop Women" },
    { "type": "url", "id": "cta_link", "label": "Primary link" },
    { "type": "text", "id": "cta2_text", "label": "Secondary label", "default": "Learn more" },
    { "type": "url", "id": "cta2_link", "label": "Secondary link" },

    { "type": "header", "content": "Background" },
    { "type": "select", "id": "background_mode", "label": "Mode", "default": "image", "options": [
      { "value": "image", "label": "Image" },
      { "value": "video", "label": "Video (MP4)" }
    ] },
    { "type": "image_picker", "id": "background_image", "label": "Background image" },
    { "type": "text", "id": "bg_image_alt", "label": "Image alt", "default": "Hero background" },
    { "type": "url", "id": "background_video", "label": "Background video (MP4)" },
    { "type": "color", "id": "overlay_color", "label": "Overlay color", "default": "#000000" },
    { "type": "range", "id": "overlay_opacity", "label": "Overlay opacity", "min": 0, "max": 100, "step": 5, "default": 40, "unit": "%" },

    { "type": "header", "content": "Layout Controls — Hero" },
    { "type": "select", "id": "text_alignment", "label": "Text alignment", "default": "left", "options": [
      { "value": "left", "label": "Left" },
      { "value": "center", "label": "Center" },
      { "value": "right", "label": "Right" }
    ] },
    { "type": "select", "id": "container_mode", "label": "Hero container", "default": "contained", "options": [
      { "value": "contained", "label": "Contained (theme width)" },
      { "value": "full", "label": "Full width" }
    ] },
    { "type": "text", "id": "content_measure", "label": "Max copy width", "default": "60ch" },
    { "type": "range", "id": "hero_height_d", "label": "Hero height (desktop, vh)", "min": 40, "max": 90, "step": 2, "default": 80 },
    { "type": "range", "id": "hero_height_m", "label": "Hero height (mobile, vh)", "min": 40, "max": 80, "step": 2, "default": 64 },
    { "type": "range", "id": "hero_pad_x_desktop", "label": "Hero padding X (desktop, px)", "min": 0, "max": 160, "step": 4, "default": 64 },
    { "type": "range", "id": "hero_pad_x_mobile", "label": "Hero padding X (mobile, px)", "min": 0, "max": 64, "step": 4, "default": 16 },
    { "type": "range", "id": "hero_pad_y_desktop", "label": "Hero padding Y (desktop, px)", "min": 0, "max": 240, "step": 8, "default": 96 },
    { "type": "range", "id": "hero_pad_y_mobile", "label": "Hero padding Y (mobile, px)", "min": 0, "max": 200, "step": 8, "default": 72 },

    { "type": "header", "content": "Layout Controls — Support Grid" },
    { "type": "range", "id": "support_max_w", "label": "Grid max width (px)", "min": 960, "max": 1920, "step": 40, "default": 1600 },
