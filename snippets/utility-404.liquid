<section id="{{ section.id }}" class="section-pad" style="text-align:center;background:var(--c-surface);color:var(--c-text)">
  <div class="container">
    <h1 class="h2" style="margin-bottom:var(--space-sm)">{{ settings.notfound_heading }}</h1>
    <p style="margin:0 auto var(--space-md);max-width:65ch">{{ settings.notfound_body }}</p>
    <a href="{{ settings.notfound_cta_link | default: '/' }}" class="btn btn--{{ settings.button_variant_default | default: 'solid' }} btn--md">
      {{ settings.notfound_cta_label }}
    </a>
  </div>
</section>
