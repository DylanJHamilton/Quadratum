    --q-muted: {{ C_text_muted }};
    --q-bg: {{ s.bg_color | default: C_bg_contrast }};
    --q-btn-bg: {{ C_primary }};
    --q-btn-fg: {{ settings.text_on_color | default: '#ffffff' }};
    --q-btn-bdr: {{ C_text_base }};
    --q-btn-bw: {{ BTN_bw }}px;
    --q-btn-br: {{ BTN_radius }}px;
